<% if @payment.checkout? %>
    <%= form_for @payment, url: banktransfer_admin_order_payment_path(@order, @payment.number) do |f| %>
        <%= f.field_container :response_code, class: ['form-group'] do %>
          <%= f.label :response_code, Spree.t(:transaction_id) %>
          <%= f.text_field :response_code, class: 'form-control' %>
          <%= f.error_message_on :response_code %>
        <% end %>

        <div class="form-group form-actions">
            <%= button Spree.t('actions.update') %>
        </div>
    <% end %>
<% end %>